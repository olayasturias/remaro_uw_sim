<?xml version="1.0"?>
<launch>
  <!-- Vehicle's namespace -->
  <arg name="namespace" default="bluerov2"/>
    <arg name="model" default="$(find remaro_rov_models)/urdf/bluerov2/base.xacro"/>

  <include file="$(find uuv_gazebo_worlds)/launch/subsea_bop_panel.launch">
  </include>

  <include file="$(find remaro_rov_models)/launch/upload_bluerov2.launch">
    	<arg name="namespace" value="$(arg namespace)"/>
      <arg name="x" default="3"/>
      <arg name="y" default="5"/>
      <arg name="z" default="-59"/>
      <arg name="roll" default="3.1415926535897931"/>
  </include>

  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find remaro_uw_sim)/config/bluerov2.rviz" />
<param name="robot_description" command="$(find xacro)/xacro.py --inorder $(arg model)"/>

</launch>